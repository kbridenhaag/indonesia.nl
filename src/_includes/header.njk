<header class="app-header" data-module='app-header'>
  <div class="app-header__container">
    <a href="/{{ locale }}" class="app-header__title">
      <img src="/assets/images/kbrinl-logo.png" alt="Indonesian Embassy The Hague" class="app-header__title-logo">
      <div>
        <span class="kbrinl-!-font-weight-bold">{{ 'common.embassy' | i18n }}</span><br>
        <span>{{ 'common.embassyLocation' | i18n }}</span>
      </div>
    </a>
    <a class="app-header__logo-link" href="/{{locale}}" tabindex="-1">
      <img src="/assets/images/kbrinl-logo.png" alt="Indonesian Embassy The Hague" class="app-header__logo">
    </a>
  <nav class="app-header__nav">
    <div class="app-header__emergency-hotline-container">
      <a class="kbrinl-button kbrinl-button--warning app-header__emergency-hotline" href="{{ 'common.emergencyHotline.href' | i18n }}">
      <svg xmlns="http://www.w3.org/2000/svg" width="15px" viewBox="0 0 512 512"><!-- Font Awesome Free 5.15.4 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free (Icons: CC BY 4.0, Fonts: SIL OFL 1.1, Code: MIT License) --><path d="M497.39 361.8l-112-48a24 24 0 0 0-28 6.9l-49.6 60.6A370.66 370.66 0 0 1 130.6 204.11l60.6-49.6a23.94 23.94 0 0 0 6.9-28l-48-112A24.16 24.16 0 0 0 122.6.61l-104 24A24 24 0 0 0 0 48c0 256.5 207.9 464 464 464a24 24 0 0 0 23.4-18.6l24-104a24.29 24.29 0 0 0-14.01-27.6z"/></svg>
      {{ 'common.emergencyHotline.title' | i18n }}</a>
    </div>
    <button class="app-header__menu-button kbrinl-!-font-weight-bold" aria-controls="main-menu">Menu</button>
    <div class="app-header__menu" id="main-menu">
      <div class="kbrinl-width-container">
        <div class="kbrinl-grid-row">
          <div class="kbrinl-grid-column-one-third">
            <p class="kbrinl-body-l">{{ 'menu.lead' | i18n }}</p>
          </div>
          <ul class="app-header__menu-list">
            <div class="kbrinl-grid-column-one-third">
              <li class="app-header__menu-item">
                <a class="app-header__menu-link" href="">{{ 'menu.policy.title' | i18n }}</a>
              </li>
              <li class="app-header__menu-item">
                <a class="app-header__menu-link" href="">{{ 'menu.about.title' | i18n }}</a>
              </li>
              {% if (locale == 'id') %}
                <li class="app-header__menu-item">
                  <a class="app-header__menu-link" href="">Pelindungan WNI</a>
                </li>
              {% endif %}
            </div>
            <div class="kbrinl-grid-column-one-third">
              <li class="app-header__menu-item">
                <a class="app-header__menu-link" href="">{{ 'menu.services.title' | i18n }}</a>
              </li>
              <li class="app-header__menu-item">
                <a class="app-header__menu-link" href="/eh">{{ 'menu.publications.title' | i18n }}</a>
              </li>
            </div>
          </ul>
        </div>
      </div>
    </div>
  </nav>
  </div>
</header>
