{% if (locale == 'id') %}
  {% set accordionItems = (accordionItems.push(
      {
      heading: {
        text: 'Pembuatan NIT'
      },
      content: {
        html: '<p><strong>Kamis</strong><br>10:00 - 12:00 (dengan janji)<br/> <a href="https://kemlu.go.id/thehague/id/pages/pembuatan_nomor_induk_tunggal__nit__/4930/etc-menu">Prosedur pembuatan NIT</a></p>'
      }
    }
), accordionItems) %}
{% endif %}

{% for item in accordionItems %}
  <hr class="kbrinl-section-break kbrinl-section-break--visible">
  <h3 class="kbrinl-heading-m kbrinl-!-margin-bottom-2 kbrinl-!-margin-top-3">
    {{ item.heading.text }}
  </h3>
  <div class="app-cms-content">{{ item.content.html | safe }}</div>
{% endfor%}
